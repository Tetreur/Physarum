{
  "lsp": {
    "biome": {
      "settings": {
        "require_config_file": true
      }
    }
  },
  "language_servers": [
    "biome", "..."
  ],
  "formatter": {
    "language_server": {
      "name": "biome"
    }
  },
  "code_actions_on_format": {
    "source.fixAll.biome": true,
    "source.organizeImports.biome": true
  },
  "languages": {
    "TypeScript": {
      "language_servers": [
        "biome"
      ],
      "formatter": "language_server"
    },
    "TSX": {
      // "soft_wrap": "none"
      "language_servers": [
        "biome"
      ],
      "formatter": "language_server"
    }
  }
}
